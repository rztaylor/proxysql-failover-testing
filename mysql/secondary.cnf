[mysqld]
server-id=2
log_bin=mysql-bin
binlog_format=ROW
gtid_mode=ON
enforce_gtid_consistency=ON
log_slave_updates=ON
binlog_expire_logs_seconds=86400
relay_log=relay-bin
relay_log_purge=ON
skip_replica_start=ON
# Note: read_only is managed via SET PERSIST commands (not in this config file)
# This allows the setting to persist across docker stop/start while still
# allowing Docker entrypoint initialization to work properly on first run
